---
import '../styles/global.css';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import SEOHead from '../components/common/SEOHead.astro';
import Breadcrumbs from '../components/ui/Breadcrumbs.astro';
import SearchPalette from '../components/interactive/SearchPalette.svelte';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const {
	title,
	description = 'The #1 Guide to Online Casinos in Canada.',
	image,
} = Astro.props;
---

<!doctype html>
<html lang='en-CA'>
	<head>
		<SEOHead title={title} description={description} image={image} />
		<slot name='head' />
	</head>

	<body class='flex flex-col min-h-screen bg-slate-50'>
		<SearchPalette client:idle />
		<Header />

		<main class={`flex-grow`}>
			<slot />
		</main>

		<Footer />
	</body>
</html>
