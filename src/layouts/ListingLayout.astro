---
// src/layouts/ListingLayout.astro
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/ui/Breadcrumbs.astro';
import Container from '../components/common/Container.astro';

interface Props {
	title: string;
	description: string;
	heroTitle: string;
	heroDescription: string;
	breadcrumbs?: { text: string; href: string }[];
}

const { title, description, heroTitle, heroDescription, breadcrumbs } =
	Astro.props;
---

<BaseLayout title={title} description={description}>
	<Container>
		{
			breadcrumbs && (
				<div class='mb-6'>
					<Breadcrumbs items={breadcrumbs} />
				</div>
			)
		}
		<div
			class='bg-slate-900 text-white min-h-[300px] flex flex-col justify-center items-center px-6 text-center rounded-3xl shadow-lg'
		>
			<h1 class='text-4xl md:text-5xl font-black mb-4 tracking-tight'>
				{heroTitle}
			</h1>
			<p class='text-xl text-slate-300 max-w-2xl mx-auto'>
				{heroDescription}
			</p>
		</div>
	</Container>

	<div class='container mx-auto px-4 pb-20'>
		<slot />
	</div>
</BaseLayout>
