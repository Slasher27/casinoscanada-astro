---
interface Props {
	pros: string[];
	cons: string[];
}

const { pros, cons } = Astro.props;
---

<div class='not-prose my-8 grid grid-cols-1 md:grid-cols-2 gap-6'>
	<div class='bg-success-50 rounded-card p-card-lg border border-success-100'>
		<div class='flex items-center gap-2 mb-4 border-b border-success-200 pb-2'>
			<div
				class='w-6 h-6 rounded-full bg-success-600 text-white flex items-center justify-center font-bold text-xs'
			>
				✓
			</div>
			<h3 class='text-success-700 font-bold text-lg m-0'>The Good</h3>
		</div>

		<ul class='space-y-3 m-0 p-0 list-none'>
			{
				pros.map((item) => (
					<li class='flex items-start gap-3 text-sm text-success-700 leading-snug'>
						<span class='mt-1 text-success-600 font-bold shrink-0'>✓</span>
						<span>{item}</span>
					</li>
				))
			}
		</ul>
	</div>

	<div class='bg-accent-50 rounded-card p-card-lg border border-accent-100'>
		<div class='flex items-center gap-2 mb-4 border-b border-accent-100 pb-2'>
			<div
				class='w-6 h-6 rounded-full bg-accent-600 text-white flex items-center justify-center font-bold text-xs'
			>
				✕
			</div>
			<h3 class='text-accent-700 font-bold text-lg m-0'>The Bad</h3>
		</div>

		<ul class='space-y-3 m-0 p-0 list-none'>
			{
				cons.map((item) => (
					<li class='flex items-start gap-3 text-sm text-accent-700 leading-snug'>
						<span class='mt-1 text-accent-600 font-bold shrink-0'>✕</span>
						<span>{item}</span>
					</li>
				))
			}
		</ul>
	</div>
</div>
