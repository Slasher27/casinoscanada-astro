---
import Button from './Button.astro';

interface Props {
	casinoName: string;
	bonus: string;
	link: string;
	logo?: string;
}

const { casinoName, bonus, link, logo } = Astro.props;
---

<div
	class='not-prose my-8 p-card-lg bg-primary-900 rounded-card border border-primary-700 shadow-card-hover flex flex-col md:flex-row items-center gap-6'
>
	<div
		class='w-16 h-16 bg-accent-600 rounded-full flex items-center justify-center text-white font-bold text-2xl shrink-0'
	>
		{
			logo ? (
				<img src={logo} alt={casinoName} class='rounded-full' />
			) : (
				casinoName.charAt(0)
			)
		}
	</div>

	<div class='flex-grow text-center md:text-left'>
		<h3 class='text-white text-lg font-bold m-0'>
			{casinoName} Exclusive Offer
		</h3>
		<p class='text-bonus-400 text-2xl font-black m-0 mt-1'>{bonus}</p>
	</div>

	<Button
		href={link}
		variant="primary"
		size="md"
		class="no-underline"
	>
		Claim Bonus &rarr;
	</Button>
</div>
