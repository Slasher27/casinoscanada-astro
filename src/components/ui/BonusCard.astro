---
interface Props {
	casinoName: string;
	bonus: string;
	link: string;
	logo?: string;
}

const { casinoName, bonus, link, logo } = Astro.props;
---

<div
	class='not-prose my-8 p-6 bg-slate-900 rounded-xl border border-slate-700 shadow-xl flex flex-col md:flex-row items-center gap-6'
>
	<div
		class='w-16 h-16 bg-red-600 rounded-full flex items-center justify-center text-white font-bold text-2xl shrink-0'
	>
		{
			logo ? (
				<img src={logo} alt={casinoName} class='rounded-full' />
			) : (
				casinoName.charAt(0)
			)
		}
	</div>

	<div class='flex-grow text-center md:text-left'>
		<h3 class='text-white text-lg font-bold m-0'>
			{casinoName} Exclusive Offer
		</h3>
		<p class='text-yellow-400 text-2xl font-black m-0 mt-1'>{bonus}</p>
	</div>

	<a
		href={link}
		class='bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition transform hover:scale-105 no-underline'
	>
		Claim Bonus &rarr;
	</a>
</div>
