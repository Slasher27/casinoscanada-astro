---
// src/components/common/Analytics.astro
const GA_MEASUREMENT_ID = 'G-YSBMX1YB95';
const GSC_VERIFICATION_CODE = 'vkGSGjX-dZPz5toYcCuqklWR1Uxsc3wgGUEMTyld1mQ';
---

<!-- Google Search Console Verification -->
{GSC_VERIFICATION_CODE && (
    <meta name="google-site-verification" content={GSC_VERIFICATION_CODE} />
)}

<!-- Google Analytics 4 -->
{GA_MEASUREMENT_ID && (
    <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
        <script define:vars={{ GA_MEASUREMENT_ID }}>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', GA_MEASUREMENT_ID);
        </script>
    </>
)}
