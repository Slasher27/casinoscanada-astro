---
// src/components/common/Header.astro
import MobileMenu from './MobileMenu.svelte';

const navLinks = [
	{ text: 'Casino Reviews', href: '/reviews/' },
	{ text: 'Best Bonuses', href: '/bonuses/' },
	{ text: 'Free Slots', href: '/slots/' },
	{ text: 'Software', href: '/software/' },
	{ text: 'Banking', href: '/banking/' },
];
---

<header class='bg-white border-b border-gray-200 sticky top-0 z-40 shadow-sm'>
	<div
		class='container mx-auto px-4 h-16 flex items-center justify-between relative'
	>
		<a href='/' class='flex items-center gap-2 no-underline'>
			<span class='text-red-600 text-3xl'>ğŸ</span>
			<span class='text-2xl font-black text-slate-900 tracking-tight'>
				Casinos<span class='text-red-600'>Canada</span>
			</span>
		</a>

		<nav class='hidden md:flex items-center gap-8'>
			{
				navLinks.map((link) => (
					<a
						href={link.href}
						class='text-sm font-bold text-slate-600 hover:text-red-600 uppercase tracking-wide transition-colors'
					>
						{link.text}
					</a>
				))
			}

			<!-- Search Trigger -->
			<button
				onclick="window.dispatchEvent(new CustomEvent('open-search-palette'))"
				class='flex items-center gap-2 text-slate-500 hover:text-slate-900 bg-gray-50 hover:bg-gray-100 px-3 py-2 rounded-lg transition-colors border border-transparent hover:border-gray-200'
				aria-label='Search'
			>
				<svg
					class='w-4 h-4'
					fill='none'
					stroke='currentColor'
					viewBox='0 0 24 24'
					><path
						stroke-linecap='round'
						stroke-linejoin='round'
						stroke-width='2'
						d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'></path></svg
				>
				<span class='text-xs font-bold text-slate-400'>âŒ˜K</span>
			</button>

			<a
				href='/compare/'
				class='bg-red-600 hover:bg-red-700 text-white text-sm font-bold py-2 px-6 rounded-full transition-transform hover:scale-105 shadow-md hover:shadow-lg'
			>
				Compare
			</a>
		</nav>

		<MobileMenu client:load />
	</div>
</header>
