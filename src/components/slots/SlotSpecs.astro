---
interface Props {
	rtp: number;
	volatility: string;
	maxWin: string;
	paylines: string;
	layout: string;
	minBet: number;
	maxBet: number;
	releaseDate: string;
}

const {
	rtp,
	volatility,
	maxWin,
	paylines,
	layout,
	minBet,
	maxBet,
	releaseDate,
} = Astro.props;

// Helper color for volatility
const volColor =
	volatility.toLowerCase() === 'high'
		? 'text-red-600'
		: volatility.toLowerCase() === 'low'
			? 'text-green-600'
			: 'text-amber-600';
---

<div
	class='bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden'
>
	<div class='bg-gray-50 px-5 py-3 border-b border-gray-200'>
		<h3 class='font-bold text-gray-900 text-sm uppercase tracking-wider'>
			Game Specs
		</h3>
	</div>

	<div class='p-5 space-y-4'>
		<!-- Key Stat: RTP -->
		<div
			class='flex justify-between items-center pb-3 border-b border-gray-100'
		>
			<span class='text-gray-500 text-sm font-medium'>RTP</span>
			<span class='font-bold text-gray-900'>{rtp}%</span>
		</div>

		<!-- Key Stat: Volatility -->
		<div
			class='flex justify-between items-center pb-3 border-b border-gray-100'
		>
			<span class='text-gray-500 text-sm font-medium'>Volatility</span>
			<span class={`font-bold ${volColor}`}>{volatility}</span>
		</div>

		<!-- Grid Layout -->
		<div
			class='flex justify-between items-center pb-3 border-b border-gray-100'
		>
			<span class='text-gray-500 text-sm font-medium'>Reels / Rows</span>
			<span class='font-bold text-gray-900'>{layout || 'N/A'}</span>
		</div>

		<!-- Paylines -->
		<div
			class='flex justify-between items-center pb-3 border-b border-gray-100'
		>
			<span class='text-gray-500 text-sm font-medium'>Paylines</span>
			<span class='font-bold text-gray-900'>{paylines}</span>
		</div>

		<!-- Max Win -->
		<div
			class='flex justify-between items-center pb-3 border-b border-gray-100'
		>
			<span class='text-gray-500 text-sm font-medium'>Max Win</span>
			<span class='font-bold text-gray-900'>{maxWin}</span>
		</div>

		<!-- Betting Range -->
		<div class='flex justify-between items-center'>
			<span class='text-gray-500 text-sm font-medium'>Min/Max Bet</span>
			<span class='font-bold text-gray-900'>
				${minBet} - ${maxBet}
			</span>
		</div>
	</div>

	<!-- Footer Info -->
	<div
		class='bg-gray-50 px-5 py-3 border-t border-gray-100 text-xs text-center text-gray-400'
	>
		Released: {releaseDate}
	</div>
</div>
